  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-oG4L+COTjU7dJf0f0aFV9tbyUcu+Yokro7bUV0kMMoM=" crossorigin=""></script>

  <script>
    // Initialize Map
    const defaultLat = 33.9850;
    const defaultLng = 51.4094;
    
    const map = L.map('map').setView([defaultLat, defaultLng], 14);
    
    // Use OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap',
      maxZoom: 19,
    }).addTo(map);
    
    // Add draggable marker
    const marker = L.marker([defaultLat, defaultLng], { 
      draggable: true,
      icon: L.icon({
        iconUrl: 'https://unpkg.com/leaflet@1.9.4/dist/images/marker-icon.png',
        iconSize: [25, 41],
        iconAnchor: [12, 41]
      })
    }).addTo(map);
    
    // Set initial values
    document.getElementById('latitude').value = defaultLat;
    document.getElementById('longitude').value = defaultLng;
    
    // Update marker position and inputs
    marker.on('dragend', function(e) {
      const pos = marker.getLatLng();
      document.getElementById('latitude').value = pos.lat.toFixed(6);
      document.getElementById('longitude').value = pos.lng.toFixed(6);
    });
    
    // Update on map click
    map.on('click', function(e) {
      marker.setLatLng(e.latlng);
      document.getElementById('latitude').value = e.latlng.lat.toFixed(6);
      document.getElementById('longitude').value = e.latlng.lng.toFixed(6);
    });
    
    // Guardian Radio Buttons Logic
    const guardianLabels = [
      document.getElementById('fatherGuardianLabel'),
      document.getElementById('motherGuardianLabel'),
      document.getElementById('otherGuardianLabel')
    ];
    
    guardianLabels.forEach(label => {
      label.addEventListener('click', () => {
        guardianLabels.forEach(l => l.classList.remove('selected', 'border-primary'));
        label.classList.add('selected', 'border-primary');
        label.querySelector('input').checked = true;
      });
    });
    
    // Housing Status Radio Buttons Logic
    const housingLabels = [
      document.getElementById('personalHousingLabel'),
      document.getElementById('rentalHousingLabel'),
      document.getElementById('organizationalHousingLabel'),
      document.getElementById('otherHousingLabel')
    ];
    
    housingLabels.forEach(label => {
      label.addEventListener('click', () => {
        housingLabels.forEach(l => l.classList.remove('selected', 'border-primary'));
        label.classList.add('selected', 'border-primary');
        label.querySelector('input').checked = true;
      });
    });
    
    // Initialize first radio as selected
    guardianLabels[0].classList.add('selected', 'border-primary');
    guardianLabels[0].querySelector('input').checked = true;
    
    housingLabels[0].classList.add('selected', 'border-primary');
    housingLabels[0].querySelector('input').checked = true;
  </script>

