  <script>
    window.addEventListener('DOMContentLoaded', () => {
      // بررسی وجود توابع jalaali-js
      console.log('Checking jalaali-js functions:');
      console.log('jalaaliToGregorian:', typeof jalaaliToGregorian);
      console.log('gregorianToJalaali:', typeof gregorianToJalaali);

      if (typeof jalaaliToGregorian === 'undefined' || typeof gregorianToJalaali === 'undefined') {
        console.error('jalaali-js functions are not loaded.');
        document.getElementById('countdown').innerHTML = '<i class="fas fa-exclamation-triangle mr-1"></i> خطا در بارگذاری تقویم شمسی. لطفاً صفحه را رفرش کنید.';
        return;
      }

      // تاریخ پایان ثبت‌نام به صورت شمسی (سال، ماه، روز)
      const endDateJalaali = { year: 1404, month: 5, day: 31 }; // 31 مرداد 1404

      // تبدیل تاریخ شمسی به میلادی
      let gregorianDate;
      try {
        gregorianDate = jalaaliToGregorian(endDateJalaali.year, endDateJalaali.month, endDateJalaali.day);
        console.log('Gregorian Date:', gregorianDate);
      } catch (error) {
        console.error('Error in jalaaliToGregorian:', error.message);
        document.getElementById('countdown').innerHTML = '<i class="fas fa-exclamation-triangle mr-1"></i> خطا در تبدیل تاریخ شمسی.';
        return;
      }

      const endDate = new Date(gregorianDate.gy, gregorianDate.gm - 1, gregorianDate.gd);
      if (isNaN(endDate)) {
        console.error('Invalid endDate:', endDate);
        document.getElementById('countdown').innerHTML = '<i class="fas fa-exclamation-triangle mr-1"></i> تاریخ پایان نامعتبر است.';
        return;
      }

      // نام ماه‌های شمسی
      const persianMonths = [
        'فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور',
        'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'
      ];

      // تابع نمایش تاریخ شمسی
      function toPersianDate(date) {
        if (!(date instanceof Date) || isNaN(date)) {
          console.error('Invalid date input:', date);
          return 'تاریخ نامعتبر';
        }
        const year = date.getFullYear();
        const month = date.getMonth() + 1;
        const day = date.getDate();
        if (isNaN(year) || isNaN(month) || isNaN(day)) {
          console.error('Invalid date components:', year, month, day);
          return 'تاریخ نامعتبر';
        }
        try {
          const { jy, jm, jd } = gregorianToJalaali(year, month, day);
          return `${jd} ${persianMonths[jm - 1]} ${jy}`;
        } catch (error) {
          console.error('Error in gregorianToJalaali:', error.message);
          return 'خطا در تبدیل تاریخ';
        }
      }

      // تابع محاسبه زمان باقی‌مانده
      function updateCountdown() {
        const now = new Date();
        const diff = endDate - now;

        if (diff <= 0) {
          document.getElementById('countdown').innerHTML = '<i class="fas fa-clock mr-1"></i> مهلت ثبت‌نام به پایان رسیده است';
          return;
        }

        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

        document.getElementById('countdown').innerHTML = `
          <i class="fas fa-clock mr-1"></i> 
          زمان باقی‌مانده تا پایان ثبت‌نام: 
          <span class="font-bold">${days}</span> روز و 
          <span class="font-bold">${hours}</span> ساعت و 
          <span class="font-bold">${minutes}</span> دقیقه 
          <br>(تا تاریخ ${toPersianDate(endDate)})`;
      }

      // اولین بار تابع را اجرا می‌کنیم
      updateCountdown();

      // هر دقیقه تابع را به روز می‌کنیم
      setInterval(updateCountdown, 60000);
    });
  </script>

