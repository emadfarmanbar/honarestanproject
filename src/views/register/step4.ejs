  <script>
    // Initialize JalaliDatePicker
    jalaliDatepicker.startWatch();

    // National code validation (simple Iranian check)
    function isValidIranianNationalCode(input) {
      if (!/^[0-9]{10}$/.test(input)) return false;
      var check = +input[9];
      var sum = Array.from(input).slice(0, 9).reduce((acc, c, i) => acc + (+c * (10 - i)), 0) % 11;
      return (sum < 2 && check == sum) || (sum >= 2 && check + sum == 11);
    }

    function validateForm() {
      let valid = true;
      // Father national code
      const fnc = document.getElementById('father_national_code').value;
      if (!isValidIranianNationalCode(fnc)) {
        alert('کد ملی پدر معتبر نیست.');
        valid = false;
      }
      // Mother national code
      const mnc = document.getElementById('mother_national_code').value;
      if (!isValidIranianNationalCode(mnc)) {
        alert('کد ملی مادر معتبر نیست.');
        valid = false;
      }
      // Phone numbers (basic check)
      const fatherPhone = document.getElementsByName('father_work_phone')[0].value;
      const motherPhone = document.getElementsByName('mother_work_phone')[0].value;
      if (!/^0\d{10}$/.test(fatherPhone)) {
        alert('شماره تلفن محل کار پدر باید ۱۱ رقم و با ۰ شروع شود.');
        valid = false;
      }
      if (!/^0\d{10}$/.test(motherPhone)) {
        alert('شماره تلفن محل کار مادر باید ۱۱ رقم و با ۰ شروع شود.');
        valid = false;
      }
      // Birth certificate code (father)
      const fbc1 = document.getElementById('father_birth_certificate_part1').value;
      const fbc2 = document.getElementById('father_birth_certificate_part2').value;
      if (!/^[آ-ی]\d{2}$/.test(fbc1) || !/^\d{6}$/.test(fbc2)) {
        alert('شماره شناسنامه پدر معتبر نیست.');
        valid = false;
      }
      // Birth certificate code (mother)
      const mbc1 = document.getElementById('mother_birth_certificate_part1').value;
      const mbc2 = document.getElementById('mother_birth_certificate_part2').value;
      if (!/^[آ-ی]\d{2}$/.test(mbc1) || !/^\d{6}$/.test(mbc2)) {
        alert('شماره شناسنامه مادر معتبر نیست.');
        valid = false;
      }
      return valid;
    }
    document.querySelector('form').onsubmit = function(e) {
      if (!validateForm()) e.preventDefault();
    };
  </script>

