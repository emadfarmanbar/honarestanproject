  <script>
    // Toggle between parents and guardian forms
    const noDivorceLabel = document.getElementById('noDivorceLabel');
    const yesDivorceLabel = document.getElementById('yesDivorceLabel');
    const parentsInfo = document.getElementById('parentsInfo');
    const guardianInfo = document.getElementById('guardianInfo');
    
    // Radio inputs
    const noDivorceRadio = noDivorceLabel.querySelector('input');
    const yesDivorceRadio = yesDivorceLabel.querySelector('input');
    
    // Add event listeners
    noDivorceLabel.addEventListener('click', () => {
      noDivorceRadio.checked = true;
      updateForms();
    });
    
    yesDivorceLabel.addEventListener('click', () => {
      yesDivorceRadio.checked = true;
      updateForms();
    });
    
    function updateForms() {
      if (noDivorceRadio.checked) {
        noDivorceLabel.classList.add('selected', 'border-primary');
        yesDivorceLabel.classList.remove('selected', 'border-primary');
        parentsInfo.classList.remove('hidden');
        guardianInfo.classList.add('hidden');
        
        // Set required for parents form
        Array.from(parentsInfo.querySelectorAll('input, select')).forEach(el => el.required = true);
        Array.from(guardianInfo.querySelectorAll('input, select')).forEach(el => el.required = false);
      } else {
        noDivorceLabel.classList.remove('selected', 'border-primary');
        yesDivorceLabel.classList.add('selected', 'border-primary');
        parentsInfo.classList.add('hidden');
        guardianInfo.classList.remove('hidden');
        
        // Set required for guardian form
        Array.from(parentsInfo.querySelectorAll('input, select')).forEach(el => el.required = false);
        Array.from(guardianInfo.querySelectorAll('input, select')).forEach(el => el.required = true);
      }
    }
    
    // Initialize
    updateForms();
  </script>

